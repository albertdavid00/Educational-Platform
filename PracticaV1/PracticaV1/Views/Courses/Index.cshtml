
@{
    ViewBag.Title = "Index";
}
<br />
<div>
    <h2>Lista cursuri</h2>
    <h1>@ViewBag.Message</h1>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-success btn-info" style="background-color: #36b4e8; color: black" href="/Courses/New">Adauga curs</a>
    }
</div>
<br />
<br />
<div style="overflow-y:scroll;">
    @foreach (var course in ViewBag.Courses)
    {
        <div class="panel panel-default">
            <div class="panel-body">
                <strong>@course.CourseName</strong>
            </div>

            <div class="panel panel-footer panelFooter">
                <a class="btn btn-success btn btn-sm" style="background-color: #36b4e8; color: black" href="/Courses/Show/@course.CourseId">Detalii curs</a>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-success btn btn-sm pull-right" style="background-color: #36b4e8; color: black" href="/Courses/StudentsToEnroll/@course.CourseId">Inscrie studenti</a>
                }
            </div>
        </div>
    }

</div>