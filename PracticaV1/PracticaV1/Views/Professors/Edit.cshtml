@model PracticaV1.Models.Professor
@{
    ViewBag.Title = "Edit";
}

<br />
<br />
<div class="formEdit">
    <h2>Edit</h2>

    @using (Html.BeginForm(actionName: "Edit", controllerName: "Professors", routeValues: new { id = Model.ProfessorId }))
    {
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.Hidden("ProfessorId")

        <br />
        @Html.Label("LastName", "Nume")
        <br />
        @Html.Editor("LastName")
        <br />
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("FirstName", "Prenume")
        <br />
        @Html.Editor("FirstName")
        <br />
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })

        @Html.Label("DidacticDegree", "Grad didactic")
        <br />
        @Html.Editor("DidacticDegree")
        <br />
        @Html.ValidationMessageFor(m => m.DidacticDegree, "", new { @class = "text-danger" })
        <br />
        <br />

        <button class="btn btn-sm btn-success" type="submit">Modifica profil</button>
    }

</div>

